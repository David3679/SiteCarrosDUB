@model AcessoriosModel
@{
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
    <main>
        <h1>Cadastro de Peças</h1>
        <form asp-controller="Acessorios" asp-action="Criar" method="post">
            <div class="form-group">
                <label for="nomedapeca">Nome da Peça</label>
                <input type="text" class="form-control" asp-for="NomeDaPeca" placeholder="Digite o nome da peça">
                @Html.ValidationMessageFor(x => x.NomeDaPeca)
            </div>

            <div class="form-group">
                <label for="marca">Marca da Peça</label>
                <input type="text" class="form-control" asp-for="Marca" placeholder="Digite a marca da peça">
                @Html.ValidationMessageFor(x => x.Marca)
            </div>

            <div class="form-group">
                <label for="valor">Valor</label>
                <input type="text" class="form-control" asp-for="Valor" placeholder="Digite o valor da peça">
                @Html.ValidationMessageFor(x => x.Valor)
            </div>
            <br />
            <nav class="botoes1">
                <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
                <a class="btn btn-danger btn-block" asp-controller="Acessorios" asp-action="Index" role="button">Voltar</a>
            </nav>
        </form>
    </main>
</body>
</html>

