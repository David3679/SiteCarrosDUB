@model List<AcessoriosModel>

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
    <main>
        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success" role="alert">
                <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
                @TempData["MensagemSucesso"]
            </div>
        }
        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
                @TempData["MensagemErro"]
            </div>
        }
        <nav class="botao-adicionar">
            <a class="btn btn-primary" role="button" asp-controller="Acessorios" asp-action="Criar">Adicionar uma nova peça</a>
        </nav>
        <h1>As Peças</h1>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nome da Peça</th>
                        <th scope="col">Marca da Peça</th>
                        <th scope="col">Valor</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var acessorio in Model)
                        {
                            <tr>
                                <td>@acessorio.Id</td>
                                <td>@acessorio.NomeDaPeca</td>
                                <td>@acessorio.Marca</td>
                                <td>@acessorio.Valor</td>
                                <td>
                                    <a role="button" class="btn btn-primary" asp-route-id="@acessorio.Id" asp-controller="Acessorios" asp-action="Editar">Editar</a>
                                    <a role="button" class="btn btn-danger" asp-route-id="@acessorio.Id" asp-controller="Acessorios" asp-action="ApagarAcessorio">Apagar</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr class="add"><td valign="top" colspan="5">Nenhum usuario encontrado</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </main>
</body>
</html>

